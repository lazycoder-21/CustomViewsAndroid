<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FontAwesomeIcon">

        <attr name="icon_type" format="enum">
            <enum name="fa_regular" value="0" />
            <enum name="fa_solid" value="1" />
            <enum name="fa_brand" value="2" />
        </attr>

        <attr name="background_color" format="color" />

        <!-- to show or hide border or stroke-->
        <attr name="show_stroke" format="boolean" />
        <attr name="stroke_width" format="dimension" />
        <attr name="stroke_color" format="color" />

        <attr name="corner_radius" format="dimension" />

        <!-- if you want background to be circular make sure view's height and width are same -->
        <attr name="background_circular" format="boolean" />

        <!-- to show or hide ripple effect on click of the icon -->
        <attr name="ripple_color" format="color" />
        <attr name="mask_color" format="color" />
        <attr name="show_ripple" format="boolean" />
    </declare-styleable>
</resources>